<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/login_style.css" />
  <title>LOGIN Greek Libraries</title>
</head>

<body>
  <h1 id="err"></h1>
  <div class="section">
    <div class="header">
      Login
    </div>
    <p id="errormsg"></p>
    <form class="login_form" action="/login" method="get" id="form" aria-label="Login form">
      <div class="first-box">
        <div class="form-group">
            <i class="fa fa-envelope"></i>
            <input type="email" name="email" id="email" placeholder="Email" required aria-required="true" aria-label="Enter your email"/>
        </div>
      </div>
      <div class="second-box">
        <div class="form-group">
            <i class="fa fa-unlock-alt"></i>
            <input type="password" name="password" id="password" placeholder="Password"  required aria-required="true" aria-label="Enter your email"/>
            <i class="fa fa-eye-slash icon" id="newPassword" ></i>
        </div>
      </div>
      <div class="button">
          <button style="color: white" onclick="validate()"  id="submitButton" >Login</button>
      </div>
    </form>

  <div id="messageContainer">Welcome!</div> 
    <div class="redirect">
      Νέος χρήστης ? 
      <button>
        <a href="/signup" style="color: white">Sign-Up</a>
      </button>
    </div>
    
  </div>
  
  <div class="back">
    <a href="/"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: #635147;">
        <path d="M21 11H6.414l5.293-5.293-1.414-1.414L2.586 12l7.707 7.707 1.414-1.414L6.414 13H21z"></path>
      </svg></a>
  </div>

<script>

  const useremail = document.getElementById('email');
  const userpassword = document.getElementById('password');
 
  function validate(){
    if(checkInputs())
    return true;
    else
    return false;
 }
 
  function checkInputs()
  {
    console.log("called");
    event.preventDefault();
       //get values from input fields
      const emailval = useremail.value.trim();
      const passwdval = userpassword.value.trim();
      const error = document.getElementById('errormsg');
     
      if(emailval === '')
      {
        error.innerHTML="*Please enter your Email!";
        useremail.parentElement.classList.add('error'); 
        useremail.parentElement.classList.remove('success');
        return False;
      }
    
      else if(passwdval === '')
      {
        useremail.parentElement.classList.add('success'); 
        useremail.parentElement.classList.remove('error');
        error.innerHTML="*Please enter your Password!";
        userpassword.parentElement.classList.add('error'); 
        userpassword.parentElement.classList.remove('success');
        return false;
      }
  
      else
      {
        error.innerHTML="";
        window.location.href = "/"; //redirect to home page MAYBE CHANGE
        return true;
      }
  }
  
 </script>
 <script>
  const togglePassword = document.querySelector('#newPassword');
  const password = document.querySelector('#password');

  togglePassword.addEventListener('click', function (e) {
    if (password.type === "password") {
    password.type = "text";
    document.getElementById('newPassword').classList.remove('fa-eye-slash');
    document.getElementById('newPassword').classList.add('fa-eye');
  } else {
    password.type = "password";
    document.getElementById('newPassword').classList.remove('fa-eye');
    document.getElementById('newPassword').classList.add('fa-eye-slash');
  }
   
});
 </script>
</body>
