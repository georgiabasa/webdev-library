{{!-- searchresult.hbs --}}

<h3>Search Results</h3>
{{#if searchresult.length}}
    <p>Number of books found: {{searchresult.length}}</p>
    <ul>
        {{#each searchresult}}
            <li>
                <a href="/book/{{this.ISBN}}">{{this.title}}</a>
                <p>Author: {{this.firstName}}</p>
                <p>Category: {{this.name}}</p>
                <div>
                    <img src="/images/covers/{{this.image_id}}.jpg" alt="{{this.title}}" style="width: 100px; height: 150px;">
                </div>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No books found</p>
{{/if}}

<div class="back">
    <a href="/"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: #635147;">
        <path d="M21 11H6.414l5.293-5.293-1.414-1.414L2.586 12l7.707 7.707 1.414-1.414L6.414 13H21z"></path>
        </svg></a>
</div>